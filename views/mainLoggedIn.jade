extends ./layout.jade
block css
    // DEBUG
        link(rel='stylesheet', href='css/loading.css')
        link(rel='stylesheet', href='css/lib/animate.css')
        link(rel='stylesheet', href='css/ui.css')
        link(rel='stylesheet', id='nonUI', href='/css/style.css')

    link(rel='stylesheet', href='src/static/css/loading.css')
    link(rel='stylesheet', href='src/static/css/lib/animate.css')
    link(rel='stylesheet', href='src/static/css/ui.css')
    link(rel='stylesheet', id='nonUI', href='/src/static/css/style.css')
